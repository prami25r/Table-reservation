{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"]
    },
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src", "jest.setup.ts", "__mocks__/**/*", "tests/**/*"],
  "exclude": ["node_modules", "Pods"]
}
